
# ============================================================
# Misc custom commands
# ============================================================

# To show and execute commands in a didactic mode
show_exec() {
    echo "[CMD] $@"
    eval "$@"
}
alias sx="show_exec"

# Show dir facility
alias ls='ls -p --color=tty'
alias ll='ls -al'

# Human readable
alias df='df -h'
alias du='du -h'

# Avoid errors... use -f to skip confirmation.
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
